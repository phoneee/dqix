# Enhanced display function with comprehensive technical details
display_detailed_results() {
    local domain="$1"
    local detailed="$2"
    
    # Enhanced header with technical metadata
    echo -e "\nğŸ” ${BOLD}${BLUE}${domain}${RESET}"
    echo "â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”"
    
    # Security score visualization
    local score="${PROBE_DETAILS[assessment_overall_score]}"
    local score_percent=$(echo "$score * 100" | bc -l | cut -d. -f1)
    local bar_length=20
    local filled_bars=$(echo "$score * $bar_length" | bc -l | cut -d. -f1)
    local empty_bars=$((bar_length - filled_bars))
    
    local score_bar=""
    for ((i=0; i<filled_bars; i++)); do score_bar+="â–ˆ"; done
    for ((i=0; i<empty_bars; i++)); do score_bar+="â–‘"; done
    
    echo -e "ğŸ”’ Security Score: ${BOLD}${GREEN}${score_percent}%${RESET} ${score_bar}"
    echo -e "ğŸ“‹ Compliance: ${BOLD}${CYAN}$(capitalize "${PROBE_DETAILS[assessment_compliance_level]}")${RESET}"
    echo -e "â° Scanned: $(date -d @"${PROBE_DETAILS[assessment_timestamp]}" '+%Y-%m-%d %H:%M')"
    echo -e "ğŸ” Probes: ${PROBE_DETAILS[assessment_probe_count]} security checks completed"
    
    if [[ "$detailed" == "true" ]]; then
        # Add technical metadata for full detail
        echo -e "\nğŸ“Š Technical Details:"
        echo -e "  â€¢ Assessment Engine: ${PROBE_DETAILS[assessment_engine]}"
        echo -e "  â€¢ Probe Execution: Concurrent analysis"
        echo -e "  â€¢ Timeout Policy: ${PROBE_DETAILS[assessment_timeout_policy]}"
        echo -e "  â€¢ Scoring Algorithm: ${PROBE_DETAILS[assessment_scoring_method]}"
        echo -e "  â€¢ Total Execution Time: $(printf "%.2f" "${PROBE_DETAILS[assessment_execution_time]}")s"
    fi
    
    echo -e "\nğŸ“‹ ${BOLD}Security Assessment Details${RESET}\n"
    
    # Enhanced probe results with technical details in priority order
    display_probe_result "tls" "ğŸ” TLS/SSL Security" "Transport Layer Security" "$detailed"
    echo
    display_probe_result "https" "ğŸŒ HTTPS Implementation" "HTTP Secure Protocol" "$detailed"
    echo
    display_probe_result "dns" "ğŸŒ DNS Infrastructure" "Domain Name System" "$detailed"
    echo
    display_probe_result "security_headers" "ğŸ›¡ï¸ Security Headers" "HTTP Security Headers" "$detailed"
    echo
    
    # Enhanced summary section for detailed reports
    if [[ "$detailed" == "true" ]]; then
        display_detailed_summary
    fi
}

# Enhanced probe result display with comprehensive technical analysis
display_probe_result() {
    local probe_id="$1"
    local title="$2"
    local description="$3"
    local detailed="$4"
    
    local score="${PROBE_SCORES[$probe_id]}"
    local category="${PROBE_CATEGORIES[$probe_id]}"
    
    # Status and color coding
    local status color_code
    if (( $(echo "$score >= 0.8" | bc -l) )); then
        status="âœ… EXCELLENT"
        color_code="${GREEN}"
    elif (( $(echo "$score >= 0.6" | bc -l) )); then
        status="âš ï¸ GOOD"
        color_code="${YELLOW}"
    elif (( $(echo "$score >= 0.4" | bc -l) )); then
        status="ğŸ”¶ FAIR"
        color_code="${MAGENTA}"
    else
        status="âŒ POOR"
        color_code="${RED}"
    fi
    
    echo "â”Œâ”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”"
    echo -e "â”‚ ${BOLD}${title}${RESET} - ${description}"
    echo -e "â”‚ Score: ${color_code}$(printf "%.1f" "$(echo "$score * 100" | bc -l)")%${RESET} ${status}"
    echo -e "â”‚ Category: $(capitalize "$category")"
    echo "â”‚"
    
    if [[ "$detailed" == "true" ]]; then
        echo "â”‚ ğŸ” Technical Analysis:"
        display_technical_details "$probe_id"
    else
        echo "â”‚ Key Findings:"
        display_basic_details "$probe_id"
    fi
    
    # Add recommendations for failed checks
    if (( $(echo "$score < 0.7" | bc -l) )); then
        echo "â”‚"
        echo "â”‚ ğŸ’¡ Recommendations:"
        display_probe_recommendations "$probe_id" "$score"
    fi
    
    echo "â””â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”˜"
}

# Enhanced technical details display
display_technical_details() {
    local probe_id="$1"
    
    case "$probe_id" in
        "tls")
            echo "â”‚   â€¢ Protocol Version: ${PROBE_DETAILS[tls_protocol_version]:-Unknown}"
            echo "â”‚   â€¢ Cipher Suite: ${PROBE_DETAILS[tls_cipher_suite]:-Not analyzed}"
            echo "â”‚   â€¢ Certificate Validity: ${PROBE_DETAILS[tls_certificate_valid]:-Unknown}"
            echo "â”‚   â€¢ Certificate Chain: ${PROBE_DETAILS[tls_cert_chain_length]:-N/A} certificates"
            echo "â”‚   â€¢ Key Exchange: ${PROBE_DETAILS[tls_key_exchange]:-Not analyzed}"
            echo "â”‚   â€¢ Perfect Forward Secrecy: ${PROBE_DETAILS[tls_pfs_support]:-Unknown}"
            echo "â”‚   â€¢ Vulnerability Checks: ${PROBE_DETAILS[tls_vulnerability_scan]:-Not performed}"
            echo "â”‚   â€¢ OCSP Stapling: ${PROBE_DETAILS[tls_ocsp_stapling]:-Unknown}"
            echo "â”‚   â€¢ Certificate Transparency: ${PROBE_DETAILS[tls_ct_logs]:-Unknown}"
            ;;
        "https")
            echo "â”‚   â€¢ HTTPS Accessibility: ${PROBE_DETAILS[https_accessible]:-Unknown}"
            echo "â”‚   â€¢ HTTP Redirects: ${PROBE_DETAILS[https_http_redirects]:-Not checked}"
            echo "â”‚   â€¢ HSTS Header: ${PROBE_DETAILS[https_hsts_header]:-Not found}"
            echo "â”‚   â€¢ HSTS Max-Age: ${PROBE_DETAILS[https_hsts_max_age]:-N/A}"
            echo "â”‚   â€¢ HSTS Subdomains: ${PROBE_DETAILS[https_hsts_subdomains]:-Unknown}"
            echo "â”‚   â€¢ HTTP/2 Support: ${PROBE_DETAILS[https_http2_support]:-Unknown}"
            echo "â”‚   â€¢ HTTP/3 Support: ${PROBE_DETAILS[https_http3_support]:-Unknown}"
            echo "â”‚   â€¢ Compression: ${PROBE_DETAILS[https_compression_type]:-Unknown}"
            echo "â”‚   â€¢ Response Time: ${PROBE_DETAILS[https_response_time]:-N/A}ms"
            ;;
        "dns")
            echo "â”‚   â€¢ IPv4 Records: ${PROBE_DETAILS[dns_ipv4_records]:-Unknown}"
            echo "â”‚   â€¢ IPv6 Records: ${PROBE_DETAILS[dns_ipv6_records]:-Unknown}"
            echo "â”‚   â€¢ DNSSEC Status: ${PROBE_DETAILS[dns_dnssec_enabled]:-Unknown}"
            echo "â”‚   â€¢ DNSSEC Chain: ${PROBE_DETAILS[dns_dnssec_chain_valid]:-Unknown}"
            echo "â”‚   â€¢ SPF Record: ${PROBE_DETAILS[dns_spf_record]:-Not found}"
            echo "â”‚   â€¢ DMARC Policy: ${PROBE_DETAILS[dns_dmarc_policy]:-Not found}"
            echo "â”‚   â€¢ DKIM Selectors: ${PROBE_DETAILS[dns_dkim_selectors]:-None found}"
            echo "â”‚   â€¢ CAA Records: ${PROBE_DETAILS[dns_caa_records]:-Not found}"
            echo "â”‚   â€¢ MX Records: ${PROBE_DETAILS[dns_mx_records]:-Unknown}"
            echo "â”‚   â€¢ NS Records: ${PROBE_DETAILS[dns_ns_records]:-Unknown}"
            echo "â”‚   â€¢ TTL Analysis: ${PROBE_DETAILS[dns_ttl_analysis]:-Not analyzed}"
            ;;
        "security_headers")
            echo "â”‚   â€¢ Strict-Transport-Security: ${PROBE_DETAILS[headers_hsts]:-Missing}"
            echo "â”‚   â€¢ Content-Security-Policy: ${PROBE_DETAILS[headers_csp]:-Missing}"
            echo "â”‚   â€¢ X-Frame-Options: ${PROBE_DETAILS[headers_x_frame_options]:-Missing}"
            echo "â”‚   â€¢ X-Content-Type-Options: ${PROBE_DETAILS[headers_x_content_type_options]:-Missing}"
            echo "â”‚   â€¢ Referrer-Policy: ${PROBE_DETAILS[headers_referrer_policy]:-Missing}"
            echo "â”‚   â€¢ Permissions-Policy: ${PROBE_DETAILS[headers_permissions_policy]:-Missing}"
            echo "â”‚   â€¢ X-XSS-Protection: ${PROBE_DETAILS[headers_x_xss_protection]:-Missing}"
            echo "â”‚   â€¢ Content-Type: ${PROBE_DETAILS[headers_content_type]:-Unknown}"
            echo "â”‚   â€¢ Server Header: ${PROBE_DETAILS[headers_server_header]:-Unknown}"
            echo "â”‚   â€¢ Powered-By Header: ${PROBE_DETAILS[headers_powered_by]:-Not disclosed}"
            ;;
    esac
    
    # Add execution time if available
    if [[ -n "${PROBE_EXECUTION_TIMES[$probe_id]:-}" ]]; then
        echo "â”‚   â€¢ Execution Time: $(printf "%.2f" "${PROBE_EXECUTION_TIMES[$probe_id]}")s"
    fi
}

# Enhanced basic details display
display_basic_details() {
    local probe_id="$1"
    local count=0
    local max_items=3
    
    case "$probe_id" in
        "tls")
            if [[ -n "${PROBE_DETAILS[tls_protocol_version]:-}" && $count -lt $max_items ]]; then
                echo "â”‚   â€¢ Protocol Version: ${PROBE_DETAILS[tls_protocol_version]}"
                ((count++))
            fi
            if [[ -n "${PROBE_DETAILS[tls_cipher_suite]:-}" && $count -lt $max_items ]]; then
                echo "â”‚   â€¢ Cipher Suite: ${PROBE_DETAILS[tls_cipher_suite]}"
                ((count++))
            fi
            if [[ -n "${PROBE_DETAILS[tls_certificate_valid]:-}" && $count -lt $max_items ]]; then
                echo "â”‚   â€¢ Certificate Valid: ${PROBE_DETAILS[tls_certificate_valid]}"
                ((count++))
            fi
            ;;
        "https")
            if [[ -n "${PROBE_DETAILS[https_accessible]:-}" && $count -lt $max_items ]]; then
                echo "â”‚   â€¢ HTTPS Accessible: ${PROBE_DETAILS[https_accessible]}"
                ((count++))
            fi
            if [[ -n "${PROBE_DETAILS[https_hsts_header]:-}" && $count -lt $max_items ]]; then
                echo "â”‚   â€¢ HSTS Header: ${PROBE_DETAILS[https_hsts_header]}"
                ((count++))
            fi
            if [[ -n "${PROBE_DETAILS[https_http2_support]:-}" && $count -lt $max_items ]]; then
                echo "â”‚   â€¢ HTTP/2 Support: ${PROBE_DETAILS[https_http2_support]}"
                ((count++))
            fi
            ;;
        "dns")
            if [[ -n "${PROBE_DETAILS[dns_dnssec_enabled]:-}" && $count -lt $max_items ]]; then
                echo "â”‚   â€¢ DNSSEC Enabled: ${PROBE_DETAILS[dns_dnssec_enabled]}"
                ((count++))
            fi
            if [[ -n "${PROBE_DETAILS[dns_spf_record]:-}" && $count -lt $max_items ]]; then
                echo "â”‚   â€¢ SPF Record: ${PROBE_DETAILS[dns_spf_record]}"
                ((count++))
            fi
            if [[ -n "${PROBE_DETAILS[dns_dmarc_policy]:-}" && $count -lt $max_items ]]; then
                echo "â”‚   â€¢ DMARC Policy: ${PROBE_DETAILS[dns_dmarc_policy]}"
                ((count++))
            fi
            ;;
        "security_headers")
            if [[ -n "${PROBE_DETAILS[headers_csp]:-}" && $count -lt $max_items ]]; then
                echo "â”‚   â€¢ Content Security Policy: ${PROBE_DETAILS[headers_csp]}"
                ((count++))
            fi
            if [[ -n "${PROBE_DETAILS[headers_x_frame_options]:-}" && $count -lt $max_items ]]; then
                echo "â”‚   â€¢ X-Frame-Options: ${PROBE_DETAILS[headers_x_frame_options]}"
                ((count++))
            fi
            if [[ -n "${PROBE_DETAILS[headers_hsts]:-}" && $count -lt $max_items ]]; then
                echo "â”‚   â€¢ HSTS: ${PROBE_DETAILS[headers_hsts]}"
                ((count++))
            fi
            ;;
    esac
}

# Enhanced detailed summary display
display_detailed_summary() {
    local score="${PROBE_DETAILS[assessment_overall_score]}"
    
    # Security posture analysis
    local posture posture_color
    if (( $(echo "$score >= 0.9" | bc -l) )); then
        posture="ğŸ† EXCELLENT - Industry-leading security implementation"
        posture_color="${GREEN}"
    elif (( $(echo "$score >= 0.8" | bc -l) )); then
        posture="ğŸŸ¢ STRONG - Good security with minor improvements needed"
        posture_color="${GREEN}"
    elif (( $(echo "$score >= 0.6" | bc -l) )); then
        posture="ğŸŸ¡ MODERATE - Basic security but requires attention"
        posture_color="${YELLOW}"
    elif (( $(echo "$score >= 0.4" | bc -l) )); then
        posture="ğŸŸ  WEAK - Significant security gaps identified"
        posture_color="${MAGENTA}"
    else
        posture="ğŸ”´ CRITICAL - Major security vulnerabilities present"
        posture_color="${RED}"
    fi
    
    # Calculate probe statistics
    local total_probes=4
    local excellent_probes=0
    local good_probes=0
    local fair_probes=0
    local poor_probes=0
    
    for probe in tls https dns security_headers; do
        local probe_score="${PROBE_SCORES[$probe]}"
        if (( $(echo "$probe_score >= 0.8" | bc -l) )); then
            ((excellent_probes++))
        elif (( $(echo "$probe_score >= 0.6" | bc -l) )); then
            ((good_probes++))
        elif (( $(echo "$probe_score >= 0.4" | bc -l) )); then
            ((fair_probes++))
        else
            ((poor_probes++))
        fi
    done
    
    echo "â”Œâ”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”"
    echo -e "â”‚ ${BOLD}ğŸ“‹ Comprehensive Security Summary${RESET}"
    echo "â”‚"
    echo -e "â”‚ ${BOLD}Security Posture Assessment${RESET}"
    echo "â”‚"
    echo -e "â”‚ ${posture_color}${posture}${RESET}"
    echo "â”‚"
    echo "â”‚ ğŸ“Š Probe Statistics:"
    echo "â”‚   â€¢ Total Security Checks: $total_probes"
    echo "â”‚   â€¢ Excellent (â‰¥80%): $excellent_probes probes"
    echo "â”‚   â€¢ Good (60-79%): $good_probes probes"
    echo "â”‚   â€¢ Fair (40-59%): $fair_probes probes"
    echo "â”‚   â€¢ Poor (<40%): $poor_probes probes"
    echo "â”‚"
    echo "â”‚ ğŸ¯ Compliance Analysis:"
    echo "â”‚   â€¢ Overall Score: $(printf "%.1f" "$(echo "$score * 100" | bc -l)")%"
    echo "â”‚   â€¢ Security Grade: $(get_security_grade "$score")"
    echo "â”‚   â€¢ Compliance Level: $(capitalize "${PROBE_DETAILS[assessment_compliance_level]}")"
    echo "â”‚   â€¢ Risk Assessment: $(get_risk_level "$score")"
    echo "â”‚"
    echo "â”‚ ğŸ” Technical Assessment:"
    echo "â”‚   â€¢ Transport Security: $(printf "%.1f" "$(echo "${PROBE_SCORES[tls]} * 100" | bc -l)")%"
    echo "â”‚   â€¢ Protocol Implementation: $(printf "%.1f" "$(echo "${PROBE_SCORES[https]} * 100" | bc -l)")%"
    echo "â”‚   â€¢ Infrastructure Security: $(printf "%.1f" "$(echo "${PROBE_SCORES[dns]} * 100" | bc -l)")%"
    echo "â”‚   â€¢ Application Security: $(printf "%.1f" "$(echo "${PROBE_SCORES[security_headers]} * 100" | bc -l)")%"
    echo "â”‚"
    echo "â”‚ ğŸ’¡ Priority Actions:"
    
    # Add priority recommendations
    get_priority_actions | head -5 | nl | sed 's/^/â”‚   /'
    
    echo "â””â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”˜"
}

# Enhanced probe recommendations
display_probe_recommendations() {
    local probe_id="$1"
    local score="$2"
    local count=0
    local max_recommendations=3
    
    case "$probe_id" in
        "tls")
            if (( $(echo "$score < 0.7" | bc -l) )); then
                [[ $count -lt $max_recommendations ]] && echo "â”‚   â€¢ Upgrade to TLS 1.3 for enhanced security and performance" && ((count++))
                [[ $count -lt $max_recommendations ]] && echo "â”‚   â€¢ Implement strong cipher suites (AEAD ciphers preferred)" && ((count++))
                [[ $count -lt $max_recommendations ]] && echo "â”‚   â€¢ Ensure certificate chain is complete and valid" && ((count++))
            fi
            ;;
        "https")
            if (( $(echo "$score < 0.7" | bc -l) )); then
                [[ $count -lt $max_recommendations ]] && echo "â”‚   â€¢ Implement HTTP to HTTPS redirects (301 permanent)" && ((count++))
                [[ $count -lt $max_recommendations ]] && echo "â”‚   â€¢ Configure HSTS header with max-age >= 31536000 (1 year)" && ((count++))
                [[ $count -lt $max_recommendations ]] && echo "â”‚   â€¢ Enable HSTS includeSubDomains directive" && ((count++))
            fi
            ;;
        "dns")
            if (( $(echo "$score < 0.7" | bc -l) )); then
                [[ $count -lt $max_recommendations ]] && echo "â”‚   â€¢ Enable DNSSEC for domain authentication and integrity" && ((count++))
                [[ $count -lt $max_recommendations ]] && echo "â”‚   â€¢ Configure SPF record to prevent email spoofing" && ((count++))
                [[ $count -lt $max_recommendations ]] && echo "â”‚   â€¢ Implement DMARC policy for email authentication" && ((count++))
            fi
            ;;
        "security_headers")
            if (( $(echo "$score < 0.7" | bc -l) )); then
                [[ $count -lt $max_recommendations ]] && echo "â”‚   â€¢ Implement Content Security Policy (CSP) to prevent XSS" && ((count++))
                [[ $count -lt $max_recommendations ]] && echo "â”‚   â€¢ Add X-Frame-Options to prevent clickjacking" && ((count++))
                [[ $count -lt $max_recommendations ]] && echo "â”‚   â€¢ Set X-Content-Type-Options: nosniff" && ((count++))
            fi
            ;;
    esac
}

# Enhanced priority actions generator
get_priority_actions() {
    local actions=()
    
    # Sort probes by score (lowest first for priority)
    local sorted_probes=($(for probe in tls https dns security_headers; do
        echo "${PROBE_SCORES[$probe]} $probe"
    done | sort -n | cut -d' ' -f2))
    
    for probe in "${sorted_probes[@]}"; do
        local score="${PROBE_SCORES[$probe]}"
        if (( $(echo "$score < 0.7" | bc -l) )); then
            case "$probe" in
                "tls") actions+=("Upgrade TLS configuration and certificate management") ;;
                "https") actions+=("Implement HTTPS best practices and HSTS") ;;
                "dns") actions+=("Enable DNSSEC and email authentication") ;;
                "security_headers") actions+=("Configure comprehensive security headers") ;;
            esac
        fi
    done
    
    # Add general recommendations
    local overall_score="${PROBE_DETAILS[assessment_overall_score]}"
    if (( $(echo "$overall_score < 0.8" | bc -l) )); then
        actions+=("Conduct regular security audits and monitoring")
        actions+=("Implement security policy and procedures")
    fi
    
    printf '%s\n' "${actions[@]}"
}

# Enhanced helper functions
get_risk_level() {
    local score="$1"
    if (( $(echo "$score >= 0.8" | bc -l) )); then
        echo "Low Risk"
    elif (( $(echo "$score >= 0.6" | bc -l) )); then
        echo "Medium Risk"
    elif (( $(echo "$score >= 0.4" | bc -l) )); then
        echo "High Risk"
    else
        echo "Critical Risk"
    fi
}

capitalize() {
    local str="$1"
    echo "${str^}"
}

# Enhanced command handlers with detailed report support
cmd_scan() {
    local domain="$1"
    local detail_level="${2:-standard}"
    
    if ! is_valid_domain "$domain"; then
        echo -e "${RED}âŒ Error: Invalid domain '$domain'${RESET}" >&2
        return 1
    fi
    
    echo -e "${BLUE}ğŸ” Scanning $domain...${RESET}"
    
    # Generate detailed mock data
    generate_detailed_mock_data "$domain"
    
    # Determine if detailed output is needed
    local detailed="false"
    case "$detail_level" in
        "full"|"technical"|"detailed") detailed="true" ;;
    esac
    
    # Display results with enhanced formatting
    display_detailed_results "$domain" "$detailed"
    
    echo -e "\n${GREEN}âœ… Assessment completed successfully${RESET}"
}

